{% extends 'AppBundle::base.html.twig' %}
{% block title %}
    {{ word.latin }} | Gaffiot.org
{% endblock title %}
{% block description %}
    <meta name="description"
          content="{{ word.latin }} {{ word.french|striptags }}">
{% endblock description %}

{% block graph %}
    <meta property="og:url" content="https://www.gaffiot.org/{{ word.id }}"/>
    <meta property="og:type" content="website"/>
    <meta property="og:title" content="{{ word.latin }} | Gaffiot.org"/>
    <meta property="og:description"
          content="{{ word.french|striptags }}"/>
{% endblock %}
{% block body %}
    <br>
    <a href="{{ path('home') }}">
        <button class="btn btn-default btn-sm" role="group"><span class="glyphicon glyphicon-chevron-left"></span> Back
        </button>
    </a>
    <br><br>
    {% for s in scan|slice(0,2) %}
        <img src="{{ asset('/data/'~ s.file) }}" width="100%">
    {% endfor %}

    <div class="detail">
        <b>{{ word.latin }}</b> {{ word.french|raw }}
    </div>
{% endblock %}